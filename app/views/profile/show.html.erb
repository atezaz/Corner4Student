<% provide(:title, "Profile") %>
  <div class="container">
    <div class="panel-body">
    <!-- Title -->
    <h1 class="page-header">Profile Summary</h1>
    <div class="col-xs-12">
      <br/>
      <div class="text-center">
        <% if flash[:color]== "invalid"%>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> <%=flash[:notice]%>
            </div>
        <%elsif flash[:color]== "valid" %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> <%=flash[:notice]%>
            </div>
        <%end%>
        <% if @user.profile_pic_file_name.nil? %>
            <%= image_tag('/default_profile_pic.png', :id =>"Image_Tag", :alt => "No Image", class:'img-circle')%>
        <%else%>
            <%= image_tag(@user.profile_pic,:id =>"Image_Tag",  :alt => "No Image", class:'img-circle') %>
        <%end%>
    </div>
      <div class="col-xs-push-2 col-xs-8">
      <div class="form-group">
          <%= form_for :user, class:"form form-horizontal", method: :patch do |f| %>
              <div class="form-group">
                <%= f.label :Full_Name %>
                <br>
                <%= f.text_field :name,id:"name", disabled:'disabled', class: 'form-control', placeholder: @user.name%>
              </div>
              <div class="form-group">
                <%= f.label :Username %>
                <br>
                <%= f.text_field :username,id:"username", disabled:'disabled',class: 'form-control', placeholder: @user.username%>
              </div>
        <% end %>
      </div>
      </div>
    </div>
   </div>
</div>